{
  "name": "liferay-plugin-node-tasks",
  "version": "2.1.0",
  "description": "A set of base tasks for deploying plugins to Liferay Portal",
  "main": "index.js",
  "author": "Rob Frampton <rob.g.frampton@gmail.com> (https://github.com/Robert-Frampton)",
  "repository": "Robert-Frampton/liferay-plugin-node-tasks",
  "keywords": [
    "liferay",
    "plugin",
    "deploy"
  ],
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "test": "ava"
  },
  "ava": {
    "files": [
      "test/index.js",
      "test/{lib,tasks}/**/*.js"
    ]
  },
  "xo": {
    "rules": {
      "brace-style": "off",
      "import/order": [
        "error",
        {
          "groups": [
            [
              "builtin",
              "external"
            ],
            [
              "internal",
              "parent",
              "sibling",
              "index"
            ]
          ]
        }
      ],
      "max-lines": "off",
      "space-before-function-paren": "off",
      "xo/filename-case": "off"
    }
  },
  "license": "MIT",
  "dependencies": {
    "async": "^2.0.0-rc.2",
    "gogo-shell": "0.0.5",
    "gulp": "^3.9.1",
    "gulp-help": "^1.6.1",
    "gulp-storage": "^1.0.6",
    "gulp-util": "^3.0.7",
    "gulp-zip": "^3.2.0",
    "inquirer": "^0.12.0",
    "lodash": "^4.6.1",
    "minimist": "^1.2.0",
    "require-directory": "^2.1.1",
    "run-sequence": "^1.1.5"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "chai": "^1.10.0",
    "chai-fs": "^0.1.0",
    "del": "^2.2.0",
    "fs-extra": "^0.26.7",
    "gogo-shell-helper": "^0.0.8",
    "sinon": "^1.17.3"
  }
}
